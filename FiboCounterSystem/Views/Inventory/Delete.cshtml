@model FiboInfraStructure.Entity.FiboInventory.Inventory

@{ Layout = null; }
@inject FiboInventory.InfraStructure.Repository.IItemRepository _itemRepo;
@{ var item = await _itemRepo.GetByIdAsync((long)Model.ItemId); }


<form asp-action="DeleteConfirmed" asp-controller="Inventory">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@item.Name</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="ti-close"></i></span></button>
        </div>
        <div class="modal-body">
            <p style="font-family:Calibri">Are You Sure to Delete @item.Name?</p>
        </div>
        <div class="modal-footer">
            <div class="btn-group-sm">          
                <button type="submit" class="btn  btn-danger"><i class="ti-trash"></i> Delete Confirm</button>
            </div>
        </div>
    </div>
</form>
