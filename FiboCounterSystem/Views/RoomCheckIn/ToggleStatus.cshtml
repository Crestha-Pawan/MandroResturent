@model FiboInfraStructure.Entity.FiboLodge.RoomCheckIn

@{ Layout = null; }

<form asp-action="ToggleStatus" asp-controller="RoomCheckIn" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@Model.CustomerName</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="ti-close"></i></span></button>
        </div>
        <div class="modal-body">
            <p>
                Are You Sure to Check-Out?
            </p>
        </div>
        <div class="modal-footer">
            <div class="btn-group-sm">
                <button type="button" class="btn  btn-secondary" data-dismiss="modal"><i class="ti-close"></i> No</button>
                <button type="submit" class="btn  btn-success"><i class="ti-thumb-up"></i> Yes</button>
            </div>
        </div>
    </div>
</form>