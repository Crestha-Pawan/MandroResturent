@model Payroll.Src.Dto.PettyCashFundDto
@{
    Layout = null;
    ViewBag.Title = "Update";
}

<form asp-action="Update" asp-controller="PettyCashFund" method="post" id="messageModal main" class="frmValidation" novalidate>
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Update PettyCashFund</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6">
                        <label for="Date">Date<span style="color:red">*</span></label><br />
                        <input type="text" asp-for="Date" class="form-control" id="Name" required />
                        <div class="invalid-feedback">
                            Please Enter A Date.
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label for="Quantity">Quantity<span style="color:red">*</span></label><br />
                        <input type="text" asp-for="Quantity" class="form-control" id="Quantity" required />
                        <div class="invalid-feedback">
                            Please Enter A Quantity.
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-6">
                            <label for="Amount">Amount<span style="color:red">*</span></label><br />
                            <input type="text" asp-for="Amount" class="form-control" id="Amount" required />
                            <div class="invalid-feedback">
                                Please Enter A Amount.
                            </div>

                        </div>

                    </div>

                </div>

            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" id="btnSubmit" class="btn  btn-success"><i class="feather icon-check-square"></i> Submit</button>
            <button type="button" class="btn  btn-secondary" data-dismiss="modal">&times; Cancel</button>
        </div>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    'use strict';
    $(window).on('load', function () {
        function notify(message) {
            $.notify({
                message: message,
                type: 'danger',
                allow_dismiss: false,
                label: 'Cancel',
                className: 'btn-xs btn-danger',
                placement: { from: 'bottom', align: 'right' },
                delay: 2500,
                animate: { enter: 'animated fadeInRight', exit: 'animated fadeOutRight' },
                offset: { x: 30, y: 30 }
            });
        };
        /**/
        notify('@ViewBag.Message');
    /**/
    });
    </script>
}

<script type="text/javascript">
    $(function () {
        Array.prototype.filter.call($('.frmValidation'), function (form) {
            $('#btnSubmit').click(function () {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                    form.classList.add('was-validated');
                    return false;
                }
                else {
                    return true;
                }


            });
        });
    });
</script>