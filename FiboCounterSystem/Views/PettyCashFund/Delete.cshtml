@model FiboInfraStructure.Entity.Payroll.PettyCashFund

@{ Layout = null; }

<form asp-action="DeleteConfirmed" asp-controller="PettyCashFund">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@Model.Amount</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            <p>Are You Sure to Delete @Model.Amount?</p>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn  btn-danger">Delete Confirm</button>
        </div>
    </div>
</form>