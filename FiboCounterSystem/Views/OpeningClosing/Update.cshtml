@model Payroll.Src.Dto.OpeningClosingDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create";
}

<form asp-action="Update" asp-controller="OpeningClosing" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">OpeningClosing Create</h4>
                    <hr />
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <label for="Name">Date<span style="color:red">*</span></label><br />
                            <input type="text" asp-for="Date" class="form-control nepali-datepicker" id="Name" required autocomplete="off" />
                            <div class="invalid-feedback">
                                Please Enter A Name.
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label for="Name">Opening Balance<span style="color:red">*</span></label><br />
                            <input type="text" asp-for="OpeningBalance" class="form-control" id="Name" required autocomplete="off" />
                            <div class="invalid-feedback">
                                Please Enter A Name.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <label for="Email">Net Saving<span style="color:red">*</span></label><br />
                            <input type="text" asp-for="NetSaving" class="form-control" id="Email" required autocomplete="off" />
                            <div class="invalid-feedback">
                                Please Enter A Email.
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label for="PhoneNo">Closing Balance<span style="color:red">*</span></label><br />
                            <input type="text" asp-for="ClosingBalance" class="form-control" id="PhoneNo" required autocomplete="off" />
                            <div class="invalid-feedback">
                                Please Enter A Phone No.
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <div class="col-md-12" style="text-align:right">
                                <button type="submit" class="btn  btn-success" id="btnSubmit"><i class="feather mr-2 icon-check-square"></i>Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    'use strict';
    $(window).on('load', function () {
        function notify(message) {
            $.notify({
                message: message,
                type: 'danger',
                allow_dismiss: false,
                label: 'Cancel',
                className: 'btn-xs btn-danger',
                placement: { from: 'bottom', align: 'right' },
                delay: 2500,
                animate: { enter: 'animated fadeInRight', exit: 'animated fadeOutRight' },
                offset: { x: 30, y: 30 }
            });
        };
        /**/
        notify('@ViewBag.Message');
    /**/
    });
    </script>
}