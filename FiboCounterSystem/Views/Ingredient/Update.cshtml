@model FiboInventory.Src.Dto.IngredientDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Update";
}

<form asp-action="Update" asp-controller="Ingredient" method="post" id="main" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header ">
                    <h4 class="mb-0 text-black-50">Ingredient Update</h4>
                </div>
                <div class="card-body">
                    <div class="col-lg-12">
                        <div class="row">
                            @*<div class="col-lg-6">
                                    <label for="Name">Name<span style="color:red">*</span></label><br />
                                    <input type="text" asp-for="Name" class="form-control" id="Name" required autocomplete="off" />
                                    <div class="invalid-feedback">
                                        Please Enter A Name.
                                    </div>
                                </div>*@
                            <div class="col-lg-6">
                                <label for="Name">Quantity<span style="color:red">*</span></label><br />
                                <input type="text" asp-for="Quantity" class="form-control" id="Name" required autocomplete="off" />
                                <div class="invalid-feedback">
                                    Please Enter A Quantity.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Measuring Unit<span style="color:red">*</span></label><br />
                                <select asp-for="MeasuringUnitId" asp-items="Model.MeasuringUnitList" class="form-control" autocomplete="off" required=""></select>
                                <div class="invalid-feedback">
                                    Please Enter Measuring Unit.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <div class="col-md-12" style="text-align:right">
                                <button type="submit" class="btn  btn-primary" id="btnSubmit"><i class="feather mr-2 icon-check-circle"></i>Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <script type="text/javascript">
        $(document).on('invalid-form.validate', 'form', function () {
            var button = $(this).find(':submit');
            setTimeout(function () {
                button.removeAttr('disabled');
            }, 1);
        });
        $(document).on('submit', 'form', function () {
            var button = $(this).find(':submit');
            setTimeout(function () {
                button.attr('disabled', 'disabled');
            }, 0);
        });
    </script>
}


